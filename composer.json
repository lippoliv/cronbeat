{
    "name": "lippoliv/cronbeat",
    "description": "A PHP 8.4 application for monitoring cron jobs",
    "version": "0.1.0",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.48",
        "phpstan/phpstan": "1.12.28",
        "phpstan/phpstan-strict-rules": "1.6.2",
        "squizlabs/php_codesniffer": "3.13.2",
        "slevomat/coding-standard": "8.20.0"
    },
    "autoload": {
        "psr-4": {
            "Cronbeat\\": "src/classes/",
            "Cronbeat\\Controllers\\": "src/controllers/",
            "Cronbeat\\Views\\": "src/views/"
        },
        "files": [
            "src/views/base.view.php",
            "src/views/dashboard.view.php",
            "src/views/monitor_form.view.php",
            "src/views/login.view.php",
            "src/views/setup.view.php",
            "src/views/migrate.view.php",
            "src/views/profile.view.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Cronbeat\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phplint": "find src -name \"*.php\" -print0 | xargs -0 -n1 php -l",
        "phpstan": "phpstan analyse --error-format=table --no-progress --memory-limit=512M",
        "phpcs": "phpcs --standard=phpcs.xml",
        "codestyle": [
            "@phplint",
            "@phpstan",
            "@phpcs"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
